<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GushesBoard"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_weight="10"/>
        <TextView
            android:id="@+id/homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="15dp"
        android:textStyle="italic"

        android:layout_weight="1"/>
        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="15dp"
            android:textStyle="italic"

            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:padding="10dp">
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about"/>
        
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barchart"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Queue Size"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/todaysize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Number of N"
                android:padding="10dp"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total patients"
                android:textColor="@color/black"
                android:layout_marginTop="35dp"/>
            <TextView
                android:id="@+id/totalpatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="XX"
                android:padding="10dp"
                android:textSize="18dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimamted Waiting Time"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/waitingtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Waiting Minutes"
                android:padding="10dp"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No of Registered Doctors"
                android:textColor="@color/black"
                android:layout_marginTop="35dp"/>
            <TextView
                android:id="@+id/totaldoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="XX"
                android:textSize="18dp"/>
        </LinearLayout>



    </LinearLayout>



</LinearLayout>
